<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:weightSum="1"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/boardtop"
        android:paddingTop="4dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:padding="3dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="123dp"
            android:background="@drawable/defaultbook"
            android:id="@+id/insertimage"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OOOO년 OO월 OO일  "
                    android:gravity="right"
                    android:layout_gravity="top"
                    android:id="@+id/bookdate"
                    android:textColor="#000000"
                    />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="     "
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="     "
                    android:layout_weight="2"/>

                <TextView
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:text="작성자:"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:textColor="#000000"/>


                <TextView
                    android:id="@+id/Topname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="right"
                    android:text="홍길동"
                    android:textSize="14dp"
                     android:textColor="#000000"/>


          </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView

                android:id="@+id/booktitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="책 빌려드립니다."
                android:textSize="20dp"
                android:textColor="#000000"/>
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="댓글"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableStart="@drawable/dgle"
                    android:drawableLeft="@drawable/dgle"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    />

                <TextView
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0개"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:id="@+id/booksub"
                    android:textColor="#000000"/>

                <TextView
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="조회수"
                    android:drawableStart="@drawable/board_jo"
                    android:drawableLeft="@drawable/board_jo"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#000000"/>

                <TextView
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0개"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:id="@+id/bookcount"
                    android:textColor="#000000"/>



            </LinearLayout>


        </LinearLayout>



    </LinearLayout>
    </LinearLayout>

</LinearLayout>